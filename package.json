{
	"name": "indexer",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon --delay 1000ms --inspect --watch  'src/**/*.ts' --exec node -r ts-node/register ./src/index.ts",
		"start": "node dist/index.js",
		"migrate": "ley --require tsm --driver pg",
		"build": "rm -rf dist && tsc",
		"test": "NODE_ENV=test mocha --require ts-node/register tests/**/*.spec.ts --exit",
		"test:coverage": "NODE_ENV=test nyc mocha --require ts-node/register tests/**/*.spec.ts --exit"
	},
	"author": "Ontario Institute for Cancer Research",
	"license": "GPL-3.0",
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/express": "^4.17.14",
		"@types/mocha": "^10.0.1",
		"@types/morgan": "^1.9.3",
		"@types/sinon": "^10.0.13",
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"ley": "^0.8.1",
		"mocha": "^10.1.0",
		"nodemon": "^2.0.20",
		"nyc": "^15.1.0",
		"sinon": "^14.0.2",
		"ts-node": "^10.9.1",
		"tsm": "^2.3.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"morgan": "^1.10.0",
		"pg": "^8.8.0",
		"winston": "^3.8.2"
	}
}
